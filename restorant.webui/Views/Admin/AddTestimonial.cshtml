@model CreateTestimonialDto
@{
    Layout = "_LayoutAdmin";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yorum İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-controller="Admin" asp-action="AddTestimonial">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Yorum Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name"> Başlık</label>
                                <input type="text" class="form-control" asp-for="Title">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Yorum</label>
                                <input type="text" class="form-control" asp-for="Comment">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="Name">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Hakkımızda Görsel Url</label>
                                <input type="text" class="form-control" asp-for="ImageUrl">
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
