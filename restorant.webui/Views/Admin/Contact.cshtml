@model List<ResultContactDto>

@{
	Layout = "_LayoutAdmin";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımızda</h4>

		<div class="card">
			<div class="card-header">

				<div class="card-title">Hakkımızdaler</div>

			</div>
			<div class="card-body">
				<div class="card-sub">
					Hakkımızda ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz.
				</div>
				<table class="table mt-3">
					<thead>
						<tr>
							<th scope="col">Konum</th>
							<th scope="col">Telefon</th>
							<th scope="col">Mail</th>
							<th scope="col">Açıklama</th>
							<th scope="col">Sil</th>
							<th scope="col">Güncelle</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Location</td>
								<td>@item.Phone</td>
								<td>@item.Mail</td>
								<td>@item.Description</td>
								<td><a asp-controller="Admin" asp-action="DeleteContact" asp-route-id="@item.Id"  
										class="btn btn-outline-danger">Sil</a></td>
								<td><a asp-controller="Admin" asp-action="UpdateContact" asp-route-id="@item.Id"    
										class="btn btn-outline-success">Güncelle</a></td>

							</tr> 
						}

					</tbody>
				</table>
				<td><a asp-controller="Admin" asp-action="AddContact" class="btn btn-outline-primary">İletişim Ekle</a>
				</td>
			</div>
		</div>
	</div>
</div>
