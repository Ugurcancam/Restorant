@model List<ResultFeatureDto>

@{
    Layout = "_LayoutAdmin";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori</h4>

        <div class="card">
            <div class="card-header">

                <div class="card-title">Kategoriler</div>

            </div>
            <div class="card-body">
                <div class="card-sub">
                    Kategori ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz.
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">Başlık</th>
                            <th scope="col">Başlık2</th>
                            <th scope="col">Başlık3</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col">Açıklama2</th>
                            <th scope="col">Açıklama3</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Title2</td>
                                <td>@item.Title3</td>
                                <td>@item.Description</td>
                                <td>@item.Description2</td>
                                <td>@item.Description3</td>
                                <td><a asp-controller="Admin" asp-action="DeleteFeature" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                <td><a asp-controller="Admin" asp-action="UpdateFeature" asp-route-id="@item.Id" class="btn btn-outline-success">Güncelle</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
                <td><a asp-controller="Admin" asp-action="AddFeature" class="btn btn-outline-primary">Özel alan Ekle</a>
                </td>
            </div>
        </div>
    </div>
</div>
