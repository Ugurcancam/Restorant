@model UpdateDiscountDto
@{
    Layout = "_LayoutAdmin";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İnidirimli Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-controller="Admin" asp-action="UpdateDiscount">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İnidirimli Ürün Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">indirim Başlık</label>
                                <input type="text" class="form-control" asp-for="Title">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">indirim Açıklaması</label>
                                <input type="text" class="form-control" asp-for="Description">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">indirim Açıklaması</label>
                                <input type="text" class="form-control" asp-for="Amount">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">indirim Görsel Url</label>
                                <input type="text" class="form-control" asp-for="ImageUrl">
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
