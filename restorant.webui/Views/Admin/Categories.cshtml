@model List<restorant.webui.Dtos.CategoryDto.ResultCategoryDto>

@{
    Layout = "_LayoutAdmin";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori</h4>

        <div class="card">
            <div class="card-header">

                <div class="card-title">Kategoriler</div>

            </div>
            <div class="card-body">
                <div class="card-sub">
                    Kategori ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz.
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">Kategori Adı</th>
                            <th scope="col">Durum</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Status</td>
                                <td><a asp-controller="Admin" asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                <td><a asp-controller="Admin" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-outline-success">Güncelle</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
                <td><a asp-controller="Admin" asp-action="AddCategory" class="btn btn-outline-primary">Kategori Ekle</a>
                </td>
            </div>
        </div>
    </div>
</div>
