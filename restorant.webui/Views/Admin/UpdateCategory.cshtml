@model UpdateCategoryDto
@{
    Layout = "_LayoutAdmin";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori Güncelle</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-controller="Admin" asp-action="UpdateCategory">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Kategoriyi Güncelle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Kategori Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="name">
                                <input type="hidden" asp-for="Id">
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Kategoriyi Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
