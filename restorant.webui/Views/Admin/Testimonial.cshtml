@model List<ResultTestimonialDto>

@{
	Layout = "_LayoutAdmin";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımızda</h4>

		<div class="card">
			<div class="card-header">

				<div class="card-title">Hakkımızdaler</div>

			</div>
			<div class="card-body">
				<div class="card-sub">
					Hakkımızda ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz.
				</div>
				<table class="table mt-3">
					<thead>
						<tr>
							<th scope="col">Adı soyadı</th>
							<th scope="col">Yorum</th>
							<th scope="col">Başlık</th>
							<th scope="col">Sil</th>
							<th scope="col">Güncelle</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Name</td>
								<td>@item.Comment</td>
								<td>@item.Title</td>
								<td><a asp-controller="Admin" asp-action="DeleteTestimonial" asp-route-id="@item.Id"
										class="btn btn-outline-danger">Sil</a></td>
								<td><a asp-controller="Admin" asp-action="UpdateTestimonial" asp-route-id="@item.Id"
										class="btn btn-outline-success">Güncelle</a></td>

							</tr>
						}

					</tbody>
				</table>
				<td><a asp-controller="Admin" asp-action="AddTestimonial" class="btn btn-outline-primary">Yorum Ekle</a>
				</td>
			</div>
		</div>
	</div>
</div>
