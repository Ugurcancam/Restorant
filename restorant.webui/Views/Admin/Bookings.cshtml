@model List<ResultBookingDto>

@{
    Layout = "_LayoutAdmin";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon</h4>

        <div class="card">
            <div class="card-header">

                <div class="card-title">Rezervasyonler</div>

            </div>
            <div class="card-body">
                <div class="card-sub">
                    Rezervasyon ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz.
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">Ad Soyad</th>
                            <th scope="col">Telefon</th>
                            <th scope="col">Kişi Sayısı</th>
                            <th scope="col">Rezervasyon açıklaması</th>

                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                            <th scope="col">Onayla</th>
                            <th scope="col">İptal Et</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Phone</td>
                                <td>@item.PersonCount</td>
                                <td>@item.Description</td>

                                <td><a asp-controller="Admin" asp-action="DeleteBooking" asp-route-id="@item.Id"
                                        class="btn btn-outline-danger">Sil</a></td>
                                <td><a asp-controller="Admin" asp-action="UpdateBooking" asp-route-id="@item.Id"
                                        class="btn btn-outline-success">Güncelle</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
                <td><a asp-controller="Admin" asp-action="AddBooking" class="btn btn-outline-primary">Rezervasyon
                        Ekle</a>
                </td>
            </div>
        </div>
    </div>
</div>
